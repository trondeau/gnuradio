<block>
  <name>Packet Header Formatter (Async)</name>
  <key>digital_packet_format_async</key>
  <import>from gnuradio import digital</import>
  <make>digital.packet_format_async($formatter, $padding, not $separate_header)</make>

  <param>
    <name>Formatter</name>
    <key>formatter</key>
    <type>raw</type>
  </param>

  <param>
    <name>Padding</name>
    <key>padding</key>
    <value>0</value>
    <type>int</type>
  </param>

  <param>
    <name>Separate Header</name>
    <key>separate_header</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>Yes</name>
      <key>False</key>
    </option>
    <option>
      <name>No</name>
      <key>True</key>
    </option>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <source>
    <name>payload</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>header</name>
    <type>message</type>
    <optional>1</optional>
    <hide>$separate_header</hide>
  </source>

</block>
